module Api::V1
  class <%= file_name.camelize.pluralize %>Controller < ApplicationController
    include JsonResponse
    include PagyPagination
    
    def index
      query = <%= file_name.camelize.singularize %>.ransack(params[:q])
      response = paginate(query.result.order(:id), params[:per_page])
      render_success(data: response, message: "<%= file_name.humanize.pluralize %> listados com sucesso")
    end
  end
end
